{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
