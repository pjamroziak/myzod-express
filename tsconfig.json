{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["tests/*"]
    }
  },
  "include": [
    "src", 
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
